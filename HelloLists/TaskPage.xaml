<Page
    x:Class="HelloLists.TaskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloLists"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="462"/>
            <RowDefinition Height="46"/>
        </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock x:Name="Hello" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <TextBox x:Name="TxtAddNewTask" HorizontalAlignment="Left"  Height="42" TextWrapping="Wrap" 
                             Text="Add new Task" Width="300" FontWeight="Light" FontStyle="Italic" TextAlignment="Left" />
                <Button x:Name="BtnAddTask" FontFamily="Segoe MDL2 Assets" Width="42" Height="42" Background="Transparent" Content="+"/>
            </StackPanel>
    </Grid>
</Page>